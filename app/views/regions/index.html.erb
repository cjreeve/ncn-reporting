<article class='region'>
  <div class='row'>
    <div class='small-12 columns'>

      <h1>Regions</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Email name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @regions.each do |region| %>
            <tr>
              <td><%= region.name %></td>
              <td><%= region.email %></td>
              <td><%= region.email_name %></td>
              <td><%= link_to 'Show', region %></td>
              <td><%= link_to 'Edit', edit_region_path(region) %></td>
              <td><%#= link_to '×', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '◂ back to control panel', controls_path %> | <%= link_to 'New Region', new_region_path %>

    </div>
  </div>
</div>