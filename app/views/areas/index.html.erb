<article class='area'>
  <div class='row'>
    <div class='small-12 columns'>

      <h1>Areas</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @areas.each do |area| %>
          <% has_issues = area.issues.limit(1).present? %>
            <tr>
              <td>
                <% if has_issues %>
                  <%= link_to area.name, issues_path(region: area.id, state: :all) %>
                <% else %>
                  <%= area.name %>
                <% end %>
              </td>
              <td><%= link_to 'Show', area %></td>
              <td><%= link_to 'Edit', edit_area_path(area) %></td>
              <td>
                <% unless has_issues %>
                  <%= link_to '×', area, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '◂ back to control panel', controls_path %> | <%= link_to 'New Area', new_area_path %>

    </div>
  </div>
</div>