<article class='route'>
  <div class='row'>
    <div class='small-12 columns'>

      <h1>Listing routes</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @routes.each do |route| %>
          <% has_issues = route.issues.limit(1).present? %>
            <tr>
              <td>
                <% if has_issues %>
                  <%= link_to route.name, issues_path(route: route.slug, state: :all) %>
                <% else %>
                  <%= route.name %>
                <% end %>
              </td>
              <td><%= route.name %></td>
              <td><%= link_to 'Show', route %></td>
              <td><%= link_to 'Edit', edit_route_path(route) %></td>
              <td>
                <% unless has_issues %>
                  <%= link_to '×', route, method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '◂ back to control panel', controls_path %> | <%= link_to 'New Route', new_route_path %>
    </div>
  </div>
</div>