
<div class='comment-form'>
  <%= simple_form_for(comment, remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :content, label: false, input_html: {rows: 3}, input_html: { autocomplete: "off" } %>
      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
      <%= f.input :issue_id, as: :hidden, input_html: { value: issue.id } %>
    </div>

    <div class="form-actions">
      <div class="photo-upload">
        <% f.object.image = Image.new %>
        <%= f.simple_fields_for :image do |g|  %>
          <%= g.input :src, as: :file, label: false %>
          <i class="upload-icon fi-photo" title="upload a photo"></i>
        <% end %>
      </div>

      <%= f.button :submit, 'Comment', class: 'button tiny', data: {'disable-with' => 'postingâ€¦'}  %>
    </div>
  <% end %>
</div>
