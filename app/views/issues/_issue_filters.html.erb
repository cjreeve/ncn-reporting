<%= render 'mode_options' %>

<span class='filter-options-label'>
  Issue filter options
  <% unless filter_params(params).blank? %>
    - <%= link_to 'reset', root_path %>
  <% end %>
</span>

<div class='row'>
  <div class='medium-8 large-9 columns'>
    <ul class='small-block-grid-2 medium-block-grid-4 large-block-grid-6 issue-filters'>
      <%= render 'issues/filters/region' %>
      <%= render 'issues/filters/group' %>
      <%= render 'issues/filters/administrative_area' %>
      <%= render 'issues/filters/route' %>
      <%= render 'issues/filters/state' %>
      <%= render 'issues/filters/label' %>
    </ul>
  </div>

  <div class='medium-4 large-3 columns'>
    <%= render 'pagination' %>
  </div>
</div>
