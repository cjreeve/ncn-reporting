<article class='problem'>
  <div class='row'>
    <div class='small-12 columns'>
      <h1>Listing problems</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @problems.each do |problem| %>
            <tr>
              <td><%= problem.name %></td>
              <td><%= link_to 'Show', problem %></td>
              <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
              <td><%= link_to 'Destroy', problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '< back to control panel', controls_path %> | <%= link_to 'New Problem', new_problem_path %>
    </div>
  </div>
</article>