
<article class='admin user'>

  <div class='row'>
    <div class='small-12 columns'>
      <h2>Admin: Edit user <%= @user.name %></h2>
    </div>
  </div>

  <div class='row'>
    <div class='small-12 medium-6 large-4 columns'>

      <div class='profile-image-upload-area'>
        <%= render 'users/profile_picture', user: @user %>
      </div>

      <%= simple_form_for(@user, url: admin_user_path(@user), html: { method: :put }) do |f| %>
        <%= render 'admin/users/form', f: f %>
        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>
<!--       <h3>Cancel my account</h3>

      <p>Unhappy? <%#= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->

      <%= link_to "Back", :back %>

    </div>
  </div>
</article>
