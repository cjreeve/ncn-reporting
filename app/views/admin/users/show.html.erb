    <div class='small-12 columns'>

      <h1>Admin: User <%= @user.name %></h1>

      <table>
        <tbody>
          <tr>
            <td>email:</td><td><%= @user.email %></td>
          </tr>
          <tr>
            <td>Role:</td><td><%= @user.role %></td>
          </tr>
