<li class='filter-checkboxes'>
  <%= form_tag admin_users_path, method: :get do %>
    <div>
      <%= check_box_tag :admin, (params[:admin] || 'yes'), params[:admin] %>
      <%= label_tag :admin, 'Admin' %>
    </div>

    <% filter_params(params).to_a.each do |param| %>
      <%= hidden_field_tag param[0].to_sym, param[1] unless param[0].to_s == 'admin' %>
    <% end %>
  <% end %>

  <%= form_tag admin_users_path, method: :get, class: 'filter-checkboxes' do %>
    <div>
      <%= check_box_tag :locked, (params[:locked] || 'yes'), params[:locked] %>
      <%= label_tag :locked, 'Locked' %>
    </div>

    <% filter_params(params).to_a.each do |param| %>
      <%= hidden_field_tag param[0].to_sym, param[1] unless param[0].to_s == 'locked' %>
    <% end %>
  <% end %>
</li>
