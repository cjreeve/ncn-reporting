    <script>
// This example displays a marker at the center of Australia.
// When the user clicks the marker, an info window opens.

function initialize() {


  var mapCenter = new google.maps.LatLng(51.509628, -0.11842);
  var mapOptions = {
    zoom: 12,
    center: mapCenter
  };

  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

  <%
  # locations = [
  #   ['Bondi Beach', 51.530244, -0.110010, 3, 'yellow'],
  #   ['Coogee Beach', 51.501294, -0.187944, 2, 'green'],
  #   ['Cronulla Beach', 51.512513, -0.084089, 1, 'red']
  # ]
    issue_counter = issues.count + 1
    locations = issues.collect do |issue|
      [ issue.title,
      issue.lat,
      issue.lng,
      (issue_counter -= 1),
      marker_style(issue.priority) ]
    end
  %>
<%# binding.pry %>
  var locations = <%=raw locations %>;

  console.log(locations)

  for (var i = 0; i < locations.length; i++) {

    var location= locations[i]

    var contentString = location[0];
    
    var infowindow = new google.maps.InfoWindow({
        content: contentString
    });

    var myLatLng = new google.maps.LatLng(location[1], location[2]);

    console.log(myLatLng)

    var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        icon: location[4],
        title: location[0],
        zIndex: location[3]
    });
    google.maps.event.addListener(marker, 'click', function() {
      infowindow.open(map,marker);
    });
  }
}

google.maps.event.addDomListener(window, 'load', initialize);

    </script>