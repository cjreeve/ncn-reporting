<article class='labels'>
  <div class='row'>
    <div class='small-12 columns'>

      <h1>Listing labels</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @labels.each do |label| %>
            <tr>
              <td><%= label.name %></td>
              <td><%= link_to 'Show', label %></td>
              <td><%= link_to 'Edit', edit_label_path(label) %></td>
              <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '< back to control panel', controls_path %> | <%= link_to 'New Label', new_label_path %>

    </div>
  </div>
</article>