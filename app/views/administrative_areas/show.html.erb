<article class='administrative-area'>
  <div class='row'>
    <div class='small-12 columns'>

      <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= @administrative_area.name %>
      </p>

      <p>
        <strong>Short name:</strong>
        <%= @administrative_area.short_name %>
      </p>

      <p>
        <strong>Group:</strong>
        <%= @administrative_area.area.name if @administrative_area.area %>
      </p>

      <%= link_to 'Edit', edit_administrative_area_path(@administrative_area) %> |
      <%= link_to 'Back', administrative_areas_path %>
    </div>
  </div>
</article>