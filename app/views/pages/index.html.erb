<article class='page'>
  <div class='row'>
    <div class='small columns'>
      <h1>Listing pages</h1>

      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Slug</th>
            <th>Content</th>
            <th>Editable by</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.name %></td>
              <td><%= page.slug %></td>
              <td><%= page.content %></td>
              <td><%= page.role %></td>
              <td><%= link_to 'Show', page %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Page', new_page_path %>
    </div>
  </div>
</article>